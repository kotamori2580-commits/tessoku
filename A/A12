#include <bits/stdc++.h>
using namespace std;

long long n,k;
long long A[100009];

bool check(long long x){
  long long sum=0;
  for(int i=1;i<=n;i++){
    sum += x/A[i];
  }
  if(sum>=k){
    return true;
  }
  else {
    return false;
  }
}

int main(){
  cin >> n >> k;  
  for(int i=1;i<=n;i++){
    cin >> A[i];
  }
  
  
  long long l,r;
  l=1;
  r=100000000;
  while(l<r){
    long long m=(l+r)/2;
    if(check(m)){
      r=m;
    }
    else{
      l=m+1;
    }
  }
  
  cout << l << "\n";
  return 0;
}
