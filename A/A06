#include <bits/stdc++.h>
using namespace std;

int main(){
  int n,q;
  cin >> n >> q;
  vector<int> vec(n);
  for(int i =0;i<n;i++){
    int a;
    cin>>a;
    if(i==0){
      vec[i]=a;
    }
    else{
      vec[i]=vec[i-1] + a;      
    }
  }
  for(int i=0;i<q;i++){
    int l, r;
    cin >> l >> r;
    int ans;
    ans = vec[r-1]-vec[l-2];
    cout << ans << "\n";
  }
}
