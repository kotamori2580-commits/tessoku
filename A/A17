#include <bits/stdc++.h>
using namespace std;

int A[100009],B[100009],dp[100009];

int main(){
  int N;
  cin >> N;
  for(int i=2;i<=N;i++){
    cin >> A[i];
  }
  for(int i=3;i<=N;i++){
    cin >> B[i];
  }
  dp[1]=0;
  dp[2]=A[2];
  for(int i=3;i<=N;i++){
    dp[i] = min(dp[i-1]+A[i], dp[i-2]+B[i]);
  }
  
  int place = N;
  vector<int> T;
  while(true){
    T.push_back(place);
    if(place==1){
      break;
    }
    else if(dp[place] == dp[place-1]+A[place]){
      place = place-1;
    }
    else if(dp[place] == dp[place-2] + B[place]){
      place = place-2;
    }
  }
  
  reverse(T.begin(), T.end());
  cout << T.size() << "\n";
  
  for(int i=0;i<T.size();i++){
    if(i<T.size()-1){
      cout << T[i] << " ";
    }
    else{
      cout << T[i] << "\n";
    }
  }
}
