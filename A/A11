/**
 * 難易度（体感）：★★☆☆☆
 * 結果：
 * 解法：[二分探索]
 * * 【学んだこと・ポイント】
 * ・二分探索の典型的な書き方を学んだ
 * * 【反省・詰まった点】
 * ・r=m-1,l=m+1として中間を抜いてから次のループに入る
 * * 【計算量】
 * ・O(log N)
 */
#include <bits/stdc++.h>
using namespace std;

int main(){
  int n, x;
  cin >> n >> x;
  vector<int> A(n+1);
  for(int i=1;i<=n;i++){
    cin >> A[i];
  }
  
  int l,r;
  l=1;
  r=n;
  for(int i=0;i<n;i++){
    int m=(l+r)/2;
    if(x<A[m]){
      r=m-1;
    }
    else if(x>A[m]){
      l=m+1;
    }
    else{
      cout << m << "\n";
      break;
    }
  }
  return 0;
}
