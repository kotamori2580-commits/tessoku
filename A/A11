#include <bits/stdc++.h>
using namespace std;

int main(){
  int n, x;
  cin >> n >> x;
  vector<int> A(n+1);
  for(int i=1;i<=n;i++){
    cin >> A[i];
  }
  
  int l,r;
  l=1;
  r=n;
  for(int i=0;i<n;i++){
    int m=(l+r)/2;
    if(x<A[m]){
      r=m-1;
    }
    else if(x>A[m]){
      l=m+1;
    }
    else{
      cout << m << "\n";
      break;
    }
  }
  return 0;
}
