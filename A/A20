/**
 * 難易度（体感）：★★★★☆
 * 結果：CE
 * 解法：[動的計画法]
 * * 【学んだこと・ポイント】
 * ・C++でlenは使わない。.size()を使う
 * ・三つの変数の最大を求める書き方は、max({a, b, c})
 * * 【反省・詰まった点】
 * ・
 * * 【計算量】
 * ・O(|S|*|T|)
 */

#include <bits/stdc++.h>
using namespace std;

int dp[2009][2009];

int main(){
  string S,T;
  cin >> S >> T;
  for(int i= 1;i<=len(S);i++){
    for(int j=1;j<=len(T);j++){
      if(S[i] == T[j]){
        dp[i][j] = max(dp[i-1][j],dp[i][j-1],dp[i-1][j-1]+1);
      }
      else{
        dp[i][j] = max(dp[i-1][j],dp[i][j-1]);
      }
    }
  }
  cout << dp[len(S][len(T)] << "\n";
}
